
<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul class="list-unstyled">
    <% @doses.each do |dose| %>
      <li>
        <%= dose.description %>
        <%= dose.ingredient.name %>
        <%= link_to 'Delete Dose', dose_path(dose), method: "delete" %>
      </li>
    <% end %>
  </ul>
  <%= simple_form_for [@cocktail, @dose] do |f|%>
    <% if @dose.errors.any? %>
      <ul>
        <% @dose.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= f.input :description, placeholder: "quantitÃ© en cl"%>
    <%= f.association :ingredient, prompt: "Choisis un ingredient"%>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
  <div class="row">
   <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <%= link_to 'Back', cocktails_path %>
    <%= link_to 'New Dose', new_cocktail_dose_path(@cocktail) %>
  </div>
</div>
